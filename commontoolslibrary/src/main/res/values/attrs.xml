<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HeadView">
        <attr name="leftText" format="string" />
        <attr name="middleText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ItemView1">
        <attr name="itemBgColor" format="color" />
        <attr name="itemLeftIcon" format="reference" />
        <attr name="itemMiddleText" format="string" />
        <attr name="itemRightIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="bannerTime" format="integer" />
        <attr name="bannerLooper" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <!--设置边框的宽度，默认为0，即无边框-->
        <attr name="civ_border_width" format="dimension" />
        <!--设置边框的颜色，默认为黑色。-->
        <attr name="civ_border_color" format="color" />
        <!--设置边框是否覆盖在图片上，默认为false，即边框在图片外圈。-->
        <attr name="civ_border_overlay" format="boolean" />
        <!--设置图片的底色，默认透明。-->
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>


    <declare-styleable name="SwitchView">
        <!--是否显示按钮阴影-->
        <attr name="hasShadow" format="boolean" />
        <!--开启状态背景色-->
        <attr name="primaryColor" format="color" />
        <!--开启状态按钮描边色-->
        <attr name="primaryColorDark" format="color" />
        <!--关闭状态描边色-->
        <attr name="offColor" format="color" />
        <!--关闭状态按钮描边色-->
        <attr name="offColorDark" format="color" />
        <!--按钮阴影色-->
        <attr name="shadowColor" format="color" />
        <!--按钮宽高形状比率(0,1] 不推荐大幅度调整-->
        <attr name="ratioAspect" format="float" />
        <!--初始化默认状态-->
        <attr name="isOpened" format="boolean" />
    </declare-styleable>

</resources>
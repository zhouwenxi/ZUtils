<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/state_data_network_error_ll"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/state_network"
        android:id="@+id/state_data_network_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/color51"
        android:id="@+id/state_data_network_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="网络连接错误丫~"
       />


</LinearLayout>